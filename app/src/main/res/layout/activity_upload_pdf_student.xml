<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadPdfStudent">

    <EditText
        android:id="@+id/EnterPdfStudent"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:ems="10"
        android:hint="Click to Upload PDF"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/AddPdfStudent"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterPdfStudent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Upload Pdf"
        app:backgroundTint="#FF9800" />

    <Button
        android:id="@+id/ViewPdfsStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterPdfStudent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="View Passed PDFS"
        app:backgroundTint="#FF9800" />

    <ListView
        android:id="@+id/PassedPDFsStudents"
        android:layout_width="282dp"
        android:layout_height="402dp"
        android:layout_below="@+id/ViewPdfsStudent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/upload" />
</RelativeLayout>